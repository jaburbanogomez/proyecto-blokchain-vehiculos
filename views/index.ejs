<body>
    <%- include('./menu') %>

        <main class="container">
            <h1 class="text-info text-center">
                <i class="fas fa-cubes"></i> BlockChain de Medicamentos
            </h1>
            <div style="margin-bottom: 50px"></div>
            <div class="d-flex justify-content-center">
                <form action="/registrar" class="w-50" method="post">
                    <div class="form-group">
                        <label for="userid" style="color: rgb(76, 91, 119);">N° lote</label>
                        <input type="text" id="userid" class="form-control" name="lote" autocomplete="off" readonly
                            placeholder="Lote" value="<%= medicamento.lote %>" />
                    </div>
                    <div class="form-group">
                        <label for="apellido" style=" color: rgb(76, 91, 119);">Medicamento</label>
                        <div class="input-group ">
                            <input type="text" id="price" class="form-control m-0" name="nombre"
                            autocomplete="off" placeholder="Nombre del medicamento" value="<%= medicamento.nombre%>"/>
                            <button class="btn btn-outline-secondary m-0" name="action" value="lista">
                                <span class="fa fa-arrow-right"></span>
                            </button>
                          </div>
                    </div>
                    
                    <div class="row">
                        <div class="col">
                            <div class="form-group" style=" color: rgb(76, 91, 119);">
                                <label for="apellido" class="mb-0">Distribuidor</label>
                                <input type="text" id="seller" class="form-control m-0" name="destribuidor"
                                    autocomplete="off" placeholder="Distribuidor" value="<%= medicamento.distribuidor%>"/>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group" style=" color: rgb(76, 91, 119);">
                                <label for="apellido" class="mb-0">Farmacia</label>
                                <input type="text" id="price" class="form-control m-0" name="farmacia"
                                    autocomplete="off" placeholder="Farmacia" value="<%= medicamento.farmacia%>"/>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group" style=" color: rgb(76, 91, 119);">
                                <label for="apellido" class="mb-0">Precio</label>
                                <input type="text" id="price" class="form-control m-0" name="precio" autocomplete="off"
                                    placeholder="Precio" value="<%= medicamento.precio%> $"/>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group" style=" color: rgb(76, 91, 119);">
                                <label for="apellido" class="mb-0">Temperatura</label>
                                <input type="text" id="seller" class="form-control m-0" name="temperatura"
                                    autocomplete="off" placeholder="Cadena de frio" value="<%= medicamento.temperaturaAlmacenamiento%>"/>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group" style=" color: rgb(76, 91, 119);">
                                <label for="apellido" class="mb-0">Fecha de fabricacion</label>
                            <input type="date" id="seller" class="form-control m-0" name="fecha_f" autocomplete="off"
                                placeholder="Fecha de fabricacion" value="<%= medicamento.fechaFabricacion%>" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group" style=" color: rgb(76, 91, 119);">
                                <label for="apellido" class="mb-0">Fecha de vencimiento</label>
                            <input type="date" id="price" class="form-control m-0" name="fecha_v" autocomplete="off"
                                placeholder="Fecha de vencimiento" value="<%= medicamento.fechaVencimiento%>" />
                            </div>
                        </div>
                    </div>
                    

                    <div class="text-center">
                        <button class="btn " name="action" value="registrar"
                            style=" background-color: rgb(49, 143, 231); color: rgb(255, 255, 255);">Nuevo
                            bloque</button>
                    </div>
                </form>
            </div>
